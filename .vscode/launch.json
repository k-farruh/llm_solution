    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: llm_service",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/llm_service.py",
            "args": [
                "--config", "config.json",
                "--question", "Tell me about HSBC financial situation for 2022"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python" // For Unix-like systems
        }
    ]
}
